
@{
    ViewBag.Title = "Mvc Razor Syntax";

    <h2>Mvc Razor Syntax</h2>

    <h3>Değişken Tanımlama</h3>

    string isim = "Hamza"; // Değişken oluşturduk

    @isim // Değişkeni yazdırma
    <br />
    <h4>@isim</h4>

    <h2>Mvc Razor Syntax</h2>

    string[] adlar = new string[] { "Ali", "Veli", "Cemşit" };

    foreach (string ad in adlar)
    {
        @(ad + " ")
        <strong>@ad</strong>
        <hr />
    }

    <h3>For Döngüsü</h3>

    for (int i = 0; i < 5; i++)
    {
        @i
        <hr />
    }

}

<h4>@isim</h4>